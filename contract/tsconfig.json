{
  "compilerOptions": {
      "module": "NodeNext",
      "target": "ESNext",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "declaration": true,
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "strict": true,
      "outDir": "dist",
      "rootDir": "./src",
      "lib": ["es2020", "DOM"]
  },
  "references": [],
  "include": ["src/**/*"],
  "exclude": ["src/seed.ts", "src/scripts/**/*", "node_modules**"]
}
